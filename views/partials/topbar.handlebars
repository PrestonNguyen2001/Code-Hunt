<header class="top-app-bar" data-header>
  <div class="dropdown">
  <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false" > Menu
    <span class="caret"></span>
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" href="#"> HTML </a>
    <a class="dropdown-item" href="#">CSS</a>
    <a class="dropdown-item" href="#"> JavaScript</a>
  </div>
</div>
  <a href="/" class="logo">
    <h1>Code Huntüìç</h1>
  </a>
  {{#ifEquals bodyClass "workspace-body"}}
  <div class="problem-nav">
    <button id="prev-problem" class="icon-btn" aria-label="Previous problem" data-ripple>
      <span class="material-symbols-outlined" aria-hidden="true">arrow_back</span>
      <div class="state-layer"></div>
    </button>
  <div class="problems-list">
      <div class="problems-list-item" id="problems-list-toggle">
        <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"></path>
        </svg>
        <p>Problems List</p>
      </div>
    </div>
    <button id="next-problem" class="icon-btn" aria-label="Next problem" data-ripple>
      <span class="material-symbols-outlined" aria-hidden="true">arrow_forward</span>
      <div class="state-layer"></div>
    </button>
  </div>
  <button class="icon-btn" id="timer-toggle" aria-label="Toggle timer" data-ripple>
    <span class="material-symbols-outlined" aria-hidden="true">timer</span>
    <div class="state-layer"></div>
  </button>
  <div id="timer-container" class="hidden items-center space-x-2 bg-dark-fill-3 p-1.5 cursor-pointer rounded hover:bg-dark-fill-2">
    <div id="timer-display">00:00:00</div>
    <svg id="timer-reset" stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
      <polyline points="1 4 1 10 7 10"></polyline>
      <polyline points="23 20 23 14 17 14"></polyline>
      <path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"></path>
    </svg>
  </div>
  <button class="icon-btn theme-btn" aria-label="Switch theme" data-theme-toggler data-ripple>
    <span class="material-symbols-outlined dark-icon" aria-hidden="true">dark_mode</span>
    <span class="material-symbols-outlined light-icon" aria-hidden="true">light_mode</span>
    <div class="state-layer"></div>
  </button>
  <button id="logout" class="icon-btn" aria-label="Log out" data-ripple>
    <span class="material-symbols-outlined" aria-hidden="true">exit_to_app</span>
    <div class="state-layer"></div>
  </button>
  {{else}}
  <button class="icon-btn theme-btn" aria-label="Switch theme" data-theme-toggler data-ripple>
    <span class="material-symbols-outlined dark-icon" aria-hidden="true">dark_mode</span>
    <span class="material-symbols-outlined light-icon" aria-hidden="true">light_mode</span>
    <div class="state-layer"></div>
  </button>
  <button id="logout" class="icon-btn" aria-label="Log out" data-ripple>
    <span class="material-symbols-outlined" aria-hidden="true">exit_to_app</span>
    <div class="state-layer"></div>
  </button>
  {{/ifEquals}}

  <!-- Problems List Sidebar -->
  <div id="problems-sidebar" class="problems-sidebar hidden" data-ripple data-nav-toggler>
    <div class="sidebar-header">
      <h2>Problems List</h2>
      <button id="close-sidebar" aria-label="Close sidebar">
        <span class="material-symbols-outlined">close</span>
      </button>
    </div>
    <div class="sidebar-content">
      <ul id="problems-list">
        {{#each problems}}
          <li><a href="/problems/{{id}}" class="problem-link">{{title}} - <span class="difficulty {{difficulty}}">{{difficulty}}</span></a></li>
        {{/each}}
      </ul>
    </div>
  </div>
</header>