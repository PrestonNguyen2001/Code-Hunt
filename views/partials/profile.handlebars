<!-- views/partials/profile.handlebars -->
<h1 class="my-7 text-center font-semibold text-3xl">Profile</h1>
<form id="profile-form" class="flex flex-col gap-4" data-profile-picture="{{user.profilePicture}}">
    <div class="input-box">
        {{#if user.profilePicture}}
          <img src="{{user.profilePicture}}" alt="Profile Picture" class="profile-picture" id="profile-picture">
        {{/if}}
        <input type="file" id="file-picker" accept="image/*" hidden>
        <div class="file-upload-group">
            <div class="file-input-wrapper">
                <input type="file" id="blog-image" name="blog-image" accept="image/*">
            </div>
            <input type="hidden" id="blog-image-url" name="image-url">
        </div>
        
        <div id="image-upload-error" class="text-red-500"></div>
        <input type="text" id="username" placeholder="Username" value="{{user.username}}" class="form-control">
        <input type="email" id="email" placeholder="Email" value="{{user.email}}" class="form-control">
        <input type="password" id="password" placeholder="Password" class="form-control">
        <button type="submit" class="btn btn-primary" id="submit-button">Update</button>
        <div id="admin-button-container"></div>
    </div>
</form>
<div class="btn-group ">
    <span onclick="showModal()" class="btn btn-primary cursor-pointer">Delete Account</span>
    <span onclick="signOut()" class="btn btn-primary cursor-pointer">Sign Out</span>
</div>
<div id="update-success" class="alert alert-success mt-5" style="display: none;"></div>
<div id="update-error" class="alert alert-danger mt-5" style="display: none;"></div>
<div id="error" class="alert alert-danger mt-5" style="display: none;"></div>
<div id="modal" class="delete-modal" style="display: none;">
    <div class="modal-content">
        <span class="close" onclick="closeModal()">&times;</span>
        <p>Are you sure you want to delete your account?</p>
        <button onclick="deleteAccount()" class="btn btn-danger">Yes, I'm sure</button>
        <button onclick="closeModal()" class="btn btn-secondary">No, cancel</button>
    </div>
</div>

<style>
body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f9;
    margin: 0;
    padding: 0;
}

h1 {
    color: #333;
}

#profile-form {
    max-width: 500px;
    margin: auto;
    background: #fff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.input-box {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.profile-picture {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
}

.form-control {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
}

.btn {
    padding: 0.75rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
}

.btn-primary {
    background-color: #007bff;
    color: #fff;
}

.btn-danger {
    background-color: #dc3545;
    color: #fff;
}

.btn-secondary {
    background-color: #6c757d;
    color: #fff;
}

.btn-group {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
}

.alert {
    max-width: 500px;
    margin: 1rem auto;
    padding: 1rem;
    border-radius: 4px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
}

.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
}



.modal-content {
    background: #fff;
    padding: 2rem;
    border-radius: 8px;
    max-width: 500px;
    width: 100%;
}

.close {
    cursor: pointer;
    float: right;
    font-size: 1.5rem;
}
</style>
