<div class="container discussions">
<section class="section my-comments">
  <h2 class="text-center text-3xl my-7 font-semibold">Discussions</h2>
  <div class="comment-card-container">
    {{#if comments.length}}
      <ul class="comment-list">
        {{#each comments}}
          <li class="comment-card">
            <div class="card-content">
              <blockquote class="card-text">
                "{{this.content}}"
              </blockquote>
              <div class="profile-card">
                <figure class="profile-banner img-holder">
                  <img src="./assets/images/author-placeholder.png" width="32" height="32" loading="lazy" alt="User Avatar">
                </figure>
                <div>
                  <p class="card-title">Posted at: {{this.created_at}}</p>
                  <h3>Comment on: <a href="/problems/{{this.problem_id}}">{{this.problem.title}}</a></h3>
                </div>
              </div>
            </div>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No comments made yet.</p>
    {{/if}}
  </div>
</section>
</div>